{
  "name": "styleguide-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate KSS node styleguide implementation for projects.",
  "main": "index.js",
  "scripts": {
    "start": "./node_modules/.bin/http-server",
    "generate-css": "sass scss/main.scss css/main.css && cleancss -o css/main-min.css css/main.css",
    "generate-styleguide": "sass scss/styleguide/_styleguide.scss styleguide/caxy-template/public/main-dev.css && ./node_modules/.bin/kss-node --config kss-config.json",
    "generate-styleguide-verbose": "sass scss/styleguide/_styleguide.scss styleguide/caxy-template/public/main-dev.css && ./node_modules/.bin/kss-node --config kss-config.json --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caxy/discoverdesign-styleguide.git"
  },
  "keywords": [
    "kss",
    "node",
    "css",
    "scss",
    "styleguide"
  ],
  "author": "Beck Kramer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/caxy/discoverdesign-styleguide/issues"
  },
  "homepage": "https://github.com/caxy/discoverdesign-styleguide#readme",
  "devDependencies": {
    "clean-css": "^3.4.10",
    "http-server": "^0.9.0",
    "kss": "^2.4.0",
    "node-sass": "^3.4.2"
  }
}
