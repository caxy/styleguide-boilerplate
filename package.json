{
  "name": "styleguide-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate KSS node styleguide implementation for projects.",
  "main": "index.js",
  "scripts": {
    "start": "./node_modules/.bin/http-server",
    "generate-css": "sass scss/main.scss css/main.css && cleancss -o css/main-min.css css/main.css",
    "generate-styleguide": "sass assets/scss/caxy-zaba.scss dist/styleguide/kss-assets/styles/styleguide.css && ./node_modules/.bin/kss --config kss-config.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caxy/styleguide-boilerplate.git"
  },
  "keywords": [
    "kss",
    "node",
    "css",
    "scss",
    "styleguide"
  ],
  "author": "Beck Kramer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/caxy/styleguide-boilerplate/issues"
  },
  "homepage": "https://github.com/caxy/styleguide-boilerplate#readme",
  "devDependencies": {
    "clean-css": "^3.4.10",
    "foundation": "^4.2.1-1",
    "http-server": "^0.9.0",
    "kss": "^3.0.0-beta.14",
    "node-sass": "^3.4.2"
  }
}
